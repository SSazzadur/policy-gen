generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
}

model Conversations {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  user     String
  policy   String
  messages Messages[]
}

model Messages {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  message         String
  by              String
  createdAt       DateTime       @default(now())
  conversationsId String?        @db.ObjectId
  conversations   Conversations? @relation(fields: [conversationsId], references: [id])
}
